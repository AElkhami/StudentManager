<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/whiteDimmed</item>
    </style>

    <style name="SubjectsTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/a</item>
        <item name="colorPrimaryDark">@color/a1</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/whiteDimmed</item>

    </style>

    <style name="SubjectsMarksTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/a</item>
        <item name="colorPrimaryDark">@color/a1</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/whiteDimmed</item>

    </style>

    <style name="TodoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/b</item>
        <item name="colorPrimaryDark">@color/b1</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/whiteDimmed</item>

    </style>


    <style name="TimeManagerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c</item>
        <item name="colorPrimaryDark">@color/c1</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/whiteDimmed</item>

    </style>


</resources>
